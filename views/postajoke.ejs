<script>
  document.addEventListener('DOMContentLoaded', function(){
    document.querySelector('select[name="type"]').addEventListener('change', toggleInputfield);
  });
  function toggleInputfield(){
    var typeSelect = document.querySelector('select[name="type"]');
    var singleJokediv = document.getElementById("single");
    var twoJokediv = document.getElementById("twopart");
    singleJokediv.style.display = "block";
    if(typeSelect.value === "single")
    {
      singleJokediv.style.display = "block";
      twoJokediv.style.display = "none";
    } else if(typeSelect.value === "twopart")
    {
      singleJokediv.style.display = "none";
      twoJokediv.style.display = "block";
    }


  }
</script>
